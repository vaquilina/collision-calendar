{
  "$schema": "https://raw.githubusercontent.com/denoland/deno/main/cli/schemas/config-file.v1.json",
  "workspace": ["./db", "./client", "./api", "./types"],
  "unstable": ["temporal", "kv", "raw-imports"],
  "lint": {
    "rules": {
      "tags": ["recommended", "jsx", "jsr"],
      "include": [
        "default-param-last",
        "guard-for-in",
        "no-await-in-loop",
        "no-self-compare",
        "no-sparse-arrays",
        "no-sync-fn-in-async-fn",
        "no-throw-literal"
      ],
      "exclude": ["jsx-no-children-prop"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true
  },
  "imports": {
    "@deno/vite-plugin": "npm:@deno/vite-plugin@^1.0.5",
    "@es-toolkit/es-toolkit": "jsr:@es-toolkit/es-toolkit@^1.39.10",
    "@faker-js/faker": "npm:@faker-js/faker@^10.0.0",
    "@hono/zod-validator": "npm:@hono/zod-validator@^0.7.2",
    "@js-temporal/polyfill": "npm:@js-temporal/polyfill@^0.5.1",
    "@libsql/client": "npm:@libsql/client@^0.15.14",
    "@std/assert": "jsr:@std/assert@^1.0.14",
    "@std/path": "jsr:@std/path@^1.1.2",
    "@std/random": "jsr:@std/random@^0.1.2",
    "@std/testing": "jsr:@std/testing@^1.0.15",
    "@tanstack/router-plugin": "npm:@tanstack/router-plugin@^1.131.31",
    "@tanstack/solid-form": "npm:@tanstack/solid-form@^1.19.3",
    "@tanstack/solid-query": "npm:@tanstack/solid-query@^5.85.6",
    "@tanstack/solid-query-devtools": "npm:@tanstack/solid-query-devtools@^5.85.6",
    "@tanstack/solid-router": "npm:@tanstack/solid-router@^1.131.31",
    "@tanstack/solid-router-devtools": "npm:@tanstack/solid-router-devtools@^1.131.31",
    "better-auth": "npm:better-auth@^1.3.7",
    "drizzle-kit": "npm:drizzle-kit@^0.31.4",
    "drizzle-orm": "npm:drizzle-orm@^0.44.5",
    "hono": "npm:hono@^4.9.5",
    "resend": "npm:resend@^6.0.2",
    "solid-js": "npm:solid-js@^1.9.9",
    "solid-toast": "npm:solid-toast@^0.5.0",
    "vite": "npm:vite@7.1.4",
    "vite-plugin-solid": "npm:vite-plugin-solid@^2.11.8",
    "vite-plugin-solid-svg": "npm:vite-plugin-solid-svg@^0.8.1",
    "zod": "npm:zod@^4.1.5"
  }
}
